<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordVerificationActivity">


    <EditText
        android:id="@+id/etVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@drawable/edit_text_bg"
        android:drawableLeft="@drawable/username_icon"
        android:drawablePadding="5dp"
        android:hint="Enter Verification Code Here"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="18sp" />
    />

    <Button
        android:id="@+id/btVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etVerification"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/primary"
        android:text="verify"
        android:textSize="20sp"
        android:textStyle="bold"
 />

    <TextView
        android:id="@+id/tvDonotReceiveCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btVerify"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Don't receive code ?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDonotReceiveCode"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Resend"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
/>

</RelativeLayout>