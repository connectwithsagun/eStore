<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordVerificationActivity">




    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="20dp"
        android:text="Enter Verification code"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="20dp"
        android:text="Please check your mail, we have sent you a mail in your gmail account with verification code "
        android:textAlignment="center"
        android:layout_below="@+id/tvTitle"
        android:inputType="textMultiLine"
        android:textColor="#DE000000"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal" />



    <EditText
        android:id="@+id/etVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_below="@id/tvDescription"
        android:background="@drawable/edit_text_bg"
        android:drawableLeft="@drawable/username_icon"
        android:drawablePadding="5dp"
        android:hint="Enter Verification Code Here"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="16sp" />
    />

    <Button
        android:id="@+id/btVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etVerification"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/primary"
        android:text="submit"
        android:textSize="18sp"
        android:textStyle="bold"
 />

    <TextView
        android:id="@+id/tvDidNotReceiveTheCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btVerify"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Did not receive the code ?"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="16sp"
         />

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDidNotReceiveTheCode"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Re-send"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:textStyle="bold"


/>

</RelativeLayout>