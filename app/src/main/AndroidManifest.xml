<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emall">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EMall">
        <activity
            android:name=".NotificationActivity"
            android:label="Notification"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".HomeActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".PasswordResetEmailVerificationActivity"
            android:label="Forget Password"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".ResetPasswordActivity"
            android:label="Reset Password"
            android:parentActivityName=".ForgetPasswordVerificationActivity" />
        <activity
            android:name=".ForgetPasswordVerificationActivity"
            android:label="Verify Code"
            android:parentActivityName=".PasswordResetEmailVerificationActivity" />
        <activity
            android:name=".VerificationActivity"
            android:label="Verification"
            android:parentActivityName=".SignUpActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LoginActivity">

        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>